{
  "name": "auth",
  "version": "1.0.0",
  "main": "dist/start.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:migrations": "tsc -p tsconfig.migrations.json",
    "dev": "nodemon --exec \"ts-node -r dotenv/config src/start.ts\"",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "knex:dev": "dotenv knex",
    "migrate": "knex migrate:latest"
  },
  "dependencies": {
    "@nexus/schema": "^0.14.0",
    "apollo-server": "^2.16.0",
    "envalid": "^6.0.2",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.2",
    "objection": "^2.2.1",
    "pg": "^8.3.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.25",
    "dotenv": "^8.2.0",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "prettier-plugin-organize-imports": "^1.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "delay": "500",
    "ignore": [
      "test/*",
      "dist/*"
    ],
    "ext": "ts,json,env"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true
  }
}
