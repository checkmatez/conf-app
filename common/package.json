{
  "name": "@checkmatez-conf/common",
  "version": "1.0.3",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf build",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "pub": "git add . && git commit -m \"update\" && yarn publish --new-version patch",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@nexus/schema": "^0.14.0",
    "node-nats-streaming": "^0.3.2"
  },
  "devDependencies": {
    "@types/node": "^14.0.26",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true
  }
}
